{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "*": ["src/*"],
            "@data": ["../"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.json",
        "src/**/*.css",
        "src/**/*.js",
        "src/**/*.jsx"
    ],
    "exclude": ["node_modules"]
}
